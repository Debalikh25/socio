<div class="container">

    <h1>Profile</h1>
   
    <% if(profile.id == locals.user.id){ %>
         
       <form action="/users/update" method="post" class="mt-4">
         
         <div class="form-group">
           
            <input type="text" name="name" value="<%= user.name %>" required placeholder="Enter name" />
 
         </div>

         <div class="form-group">
            <input type="email" name="email" value="<%= user.email %>" required placeholder="Enter email" />
         </div>
        
       
         <input type="hidden" name="id" value="<%= user.id %>" />

         <input type="submit" class="btn btn-success" value="Update" />
          

       </form>

   <% } else { %>
        
    <h2>Name :<%= profile.name %></h2>
    <h2>Email :<%= profile.email %></h2>

  <% }  %>


</div>